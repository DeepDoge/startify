{
	"imports": {
		"@girs/Adw": "https://gir.deno.dev/Adw-1",
		"@girs/Gio": "https://gir.deno.dev/Gio-2.0",
		"@girs/Gtk": "https://gir.deno.dev/Gtk-4.0",
		"@girs/Gdk": "https://gir.deno.dev/Gdk-4.0",
		"@girs/Pango": "https://gir.deno.dev/Pango-1.0",
		"@girs/Cairo": "https://gir.deno.dev/Cairo-1.0",
		"@girs/GLib": "https://gir.deno.dev/GLib-2.0",
		"@girs/GObject": "https://gir.deno.dev/GObject-2.0"
	},
	"compilerOptions": {
		"lib": [
			"esnext",
			"deno.ns",
			"deno.window"
		],
		"noUncheckedIndexedAccess": true
	},
	"tasks": {
		"start": "deno run --allow-all ./src/app.ts",
		"compile": "deno compile --allow-all -o ./dist/ ./src/app.ts"
	},
	"fmt": {
		"useTabs": true,
		"indentWidth": 4,
		"lineWidth": 120
	}
}
